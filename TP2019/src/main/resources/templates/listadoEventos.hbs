{{#partial "custom-body"}}
    <h1>
       Listado de Eventos
    </h1>

<form action="/altaEvento" method="POST">	
	<button type="submit" class="btn btn-primary" style="background-color: #e91e63;">
	  <span class="glyphicon glyphicon-plus"></span> Nuevo Evento
	  </button>
</form>

<form action="/persona/{{id}}/perfil" method="GET">	
	<button type="submit" class="btn btn-danger" style="background-color: #ffc400;">
	  <span class="glyphicon glyphicon-minus"></span> Volver
	  </button>
</form>

<div class="row mt-7 ">
    {{#each eventos}}

	<div class="card h-70 bg-light text-dark mx-2 mb-3">
	<a><img class="card-img-top" src="/evento.png" style="width:246px; height:203px;" alt="evento"></a>
	<div class="card-body">
		<h4 class="card-title">
			<a href="#">#{{descripcionEvento}}</a>
		</h4>
		<form action="/evento/{{id}}/modificarEvento" method="POST">
			<input type="submit" class="btn btn-success btn-block" value="Modificar" style="background-color: #faa400;">
		</form>
		<form action="/eliminarEvento/{{id}}" method="POST">
			<input type="submit" class="btn btn-warning btn-block" value="Eliminar" style="background-color: #e91e63;">
		</form>
	</div>
	<div class="card-footer">
		<form action="/evento/{{id}}/verAtuendosSugeridos" method="GET">
			<input type="submit" class="btn btn-warning btn-block" value="Ver atuendos Sugeridos" style="background-color: #faa400;">
		</form>
	</div>
</div>
	            
    {{/each}}
    
    </div>

{{/partial}}
{{>layout.hbs}}