{{#partial "custom-body"}}
    <h1>
       Listado de Prendas
    </h1>

	<!-- Button trigger modal -->
<form action="/guardarropa/{{id}}/agregarPrenda" method="POST">	
	<input type="submit" class="btn btn-primary">
	  <span class="glyphicon glyphicon-plus"></span> Nueva
</form>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Operacion Completada</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Prenda eliminada exitosamente
      </div>
      <div class="modal-footer">
       	  <form action="/guardarropa/{{id}}/eliminarPrenda" method="POST">
                    <input type="submit" class="btn btn-success btn-block" value="Volver">
          </form>
      </div>
    </div>
  </div>
</div>
	
   <div class="card-deck">
    {{#each prendas}}
 
	            <div class="card h-70 bg-light text-dark ">
	              <div class="card-body">
	                <h4 class="card-title">
	                  <a href="#">Prenda #{{tipoPrenda.descripcion}}</a>
	                </h4>
	                    <p class="card-text"> {{tipoTela}} - {{colorPrimario}} - {{colorSecundario}} - {{tipoPrenda.nivel}} - {{calorias}}</p>
	                     <form action="/guardarropa/{{id}}/eliminarPrenda" method="POST">
                     		 <input type="submit" class="btn btn-success btn-block" value="Eliminar">
	             		 </form>
	              </div>
	            </div>
	            
    {{/each}}
    
    </div>

{{/partial}}
{{>layout.hbs}}