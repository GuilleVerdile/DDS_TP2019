{{#partial "custom-body"}}
    <h1>
       Listado de Prendas
    </h1>

	<!-- Button trigger modal -->
<form action="/guardarropa/{{id}}/agregarPrenda" method="POST">	
	<button type="submit" class="btn btn-primary" style="background-color: #e91e63;">
	 	 <span class="glyphicon glyphicon-plus"></span> Nueva Prenda
	 </button>
</form>

<form action="/misguardarropas" method="GET">	
	<button type="submit" class="btn btn-danger">
	  <span class="glyphicon glyphicon-minus"></span> Volver
	  </button>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Operacion Completada</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Prenda eliminada exitosamente
      </div>
      <div class="modal-footer">
       	  <form action="/guardarropa/{{id}}/eliminarPrenda" method="POST">
                    <input type="submit" class="btn btn-success btn-block" value="Volver">
          </form>
      </div>
    </div>
  </div>
</div>
	
   <div class="row mt-7 ">
    {{#each prendas}}
 
	             <div class="card h-70 bg-light text-dark mx-2 mb-3">
	              <div class="card-body">
	                <h3 class="card-title">
	                  <a>Prenda: {{tipoPrenda.descripcion}}</a>
	                </h3>
	                    <p class="card-text"> 
	                    	<a><b>Tela: {{tipoTela}} </b>  -
	                    	Color primario: {{colorPrimario}}   -
	                    	<b>Color Secundario: {{colorSecundario}} </b>  -
	                    	Nivel: {{tipoPrenda.nivel}}   -
	                    	<b>Calorias: {{calorias}} </b>
	                    	</a> 
						</p>
	                     <form action="/guardarropa/{{id}}/eliminarPrenda" method="POST">
                     		 <input type="submit" class="btn btn-success btn-block" value="Eliminar">
	             		 </form>
	              </div>
	            </div>
	            
    {{/each}}
    
    </div>

{{/partial}}
{{>layout.hbs}}