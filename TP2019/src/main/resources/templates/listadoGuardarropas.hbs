{{#partial "custom-body"}}
    <h1>
       Listado de Guardarropas
    </h1>

	<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"> + Nuevo </button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Desea agregar un nuevo Guardarropa?
      </div>
      <div class="modal-footer">
       	  <form action="/agregarGuardarropa" method="POST">
                    <input type="submit" class="btn btn-success btn-block" value="Agregar">
          </form>
      </div>
    </div>
  </div>
</div>
	
   <div class="row mt-7 ">
    {{#each guardarropas}}
 
	            <div class="card h-70 bg-light text-dark mx-2 mb-3">
	              <a><img class="card-img-top" src="/guardarropa.png" style="width:246px; height:203px;" alt="guardarropa"></a>
	              <div class="card-body">
	                <h4 class="card-title">
	                  <a>Guardarropa #{{id}}</a>
	                </h4>
	                 <form action="/guardarropa/{{id}}/verPrendas" method="GET">
                     	   <input type="submit" class="btn btn-success btn-block" value="Ver prendas" style="background-color: #faa400;">
         			 </form>
	                 <form action="/guardarropa/{{id}}/agregarPrenda" method="POST">
                     	   <input type="submit" class="btn btn-success btn-block" value="Agregar Nueva Prenda" style="background-color: #faa400;">
         			 </form>
	                 <form action="/eliminarGuardarropa/{{id}}" method="POST">
                     	   <input type="submit" class="btn btn-success btn-block" value="Eliminar" style="background-color: #e91e63;">
         			 </form>
	              </div>
	              <div class="card-footer">
	              	<form action="/guardarropa/{{id}}/compartir" method="POST">
                     	   <input type="submit" class="btn btn-success btn-block" value="Compartir">
         			 </form>
         			 <form action="/guardarropa/{{id}}/dejarDeCompartir" method="POST">
                     	   <input type="submit" class="btn btn-success btn-block" value="Dejar de Compartir">
         			 </form>
	        	  </div>
	            </div>
	            
    {{/each}}
    
    </div>

{{/partial}}
{{>layout.hbs}}